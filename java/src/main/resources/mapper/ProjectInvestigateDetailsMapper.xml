<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.highnes.attractinvestment.mapper.ProjectInvestigateDetailsMapper">

    <sql id="projectInvestigateDetailsColumns">
    a.id AS "id",
        a.investigate_id AS "investigateId",
        a.dept AS "dept",
        a.name AS "name",
        a.del_flag AS "delFlag"        </sql>

    <sql id="projectInvestigateDetailsLeftJoin">
    </sql>

    <select id="get" resultType="ProjectInvestigateDetails">
        SELECT
        <include refid="projectInvestigateDetailsColumns"/>
        FROM
        project_investigate_details a
        <include refid="projectInvestigateDetailsLeftJoin"/>
        WHERE a.id = #{id}
    </select>

    <select id="findList" resultType="ProjectInvestigateDetails">
        SELECT
        <include refid="projectInvestigateDetailsColumns"/>
        FROM
        project_investigate_details a
        <include refid="projectInvestigateDetailsLeftJoin"/>
        <where>
            a.del_flag = #{DEL_FLAG_NORMAL}
            <if test="investigateId != null  and investigateId != ''">and a.investigate_id = #{investigateId}</if>
            <if test="name != null  and name != ''">and a.name like concat('%', #{name}, '%')</if>
        </where>
    </select>


    <insert id="insert" parameterType="ProjectInvestigateDetails">
        insert into project_investigate_details
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null  and id != ''">id,</if>
            <if test="investigateId != null  and investigateId != ''">investigate_id,</if>
            <if test="dept != null  and dept != ''">dept,</if>
            <if test="name != null  and name != ''">name,</if>
            <if test="delFlag != null  and delFlag != ''">del_flag,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null  and id != ''">#{id},</if>
            <if test="investigateId != null  and investigateId != ''">#{investigateId},</if>
            <if test="dept != null  and dept != ''">#{dept},</if>
            <if test="name != null  and name != ''">#{name},</if>
            <if test="delFlag != null  and delFlag != ''">#{delFlag},</if>
        </trim>
    </insert>

    <update id="update" parameterType="ProjectInvestigateDetails">
        update project_investigate_details
        <trim prefix="SET" suffixOverrides=",">
            <if test="investigateId != null  and investigateId != ''">investigate_id = #{investigateId},</if>
            <if test="dept != null  and dept != ''">dept = #{dept},</if>
            <if test="name != null  and name != ''">name = #{name},</if>
            <if test="delFlag != null  and delFlag != ''">del_flag = #{delFlag},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="delete" parameterType="String">
        update project_investigate_details set del_flag = #{DEL_FLAG_DELETE} where id = #{id}
    </delete>

    <delete id="deleteByInvestigate" parameterType="String">
        update project_investigate_details set del_flag = #{DEL_FLAG_DELETE} where investigate_id = #{investigateId}
    </delete>

</mapper>