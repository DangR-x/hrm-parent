<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.highnes.attractinvestment.mapper.ProjectReceptionMapper">

    <sql id="projectReceptionColumns">
    a.id AS "id",
        a.reception_date AS "receptionDate",
        a.main_leader AS "mainLeader",
        a.other_leader AS "otherLeader",
        a.remarks AS "remarks",
        a.del_flag AS "delFlag",
        a.project_id as "projectId",
        a.project_name as "projectName"
        </sql>

    <sql id="projectReceptionLeftJoin">
    </sql>

    <select id="get" resultType="ProjectReception">
        SELECT
        <include refid="projectReceptionColumns"/>
        FROM
        project_reception a
        <include refid="projectReceptionLeftJoin"/>
        WHERE a.id = #{id}
    </select>

    <select id="findList" resultType="ProjectReception">
        SELECT
        <include refid="projectReceptionColumns"/>
        FROM
        project_reception a
        <include refid="projectReceptionLeftJoin"/>
        <where>
            a.del_flag = #{DEL_FLAG_NORMAL}
            <if test="projectId != null and projectId != ''">
                and a.project_id = #{projectId}
            </if>
        </where>
    </select>


    <insert id="insert" parameterType="ProjectReception">
        insert into project_reception
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null  and id != ''">id,</if>
            <if test="receptionDate != null ">reception_date,</if>
            <if test="mainLeader != null  and mainLeader != ''">main_leader,</if>
            <if test="otherLeader != null  and otherLeader != ''">other_leader,</if>
            <if test="remarks != null  and remarks != ''">remarks,</if>
            <if test="delFlag != null  and delFlag != ''">del_flag,</if>
            <if test="projectId != null and projectId != ''">project_id,</if>
            <if test="projectName != null  and projectName != ''">project_name,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null  and id != ''">#{id},</if>
            <if test="receptionDate != null ">#{receptionDate},</if>
            <if test="mainLeader != null  and mainLeader != ''">#{mainLeader},</if>
            <if test="otherLeader != null  and otherLeader != ''">#{otherLeader},</if>
            <if test="remarks != null  and remarks != ''">#{remarks},</if>
            <if test="delFlag != null  and delFlag != ''">#{delFlag},</if>
            <if test="projectId != null  and projectId != ''">#{projectId},</if>
            <if test="projectName != null  and projectName != ''">#{projectName},</if>
        </trim>
    </insert>

    <update id="update" parameterType="ProjectReception">
        update project_reception
        <trim prefix="SET" suffixOverrides=",">
            <if test="receptionDate != null ">reception_date = #{receptionDate},</if>
            <if test="mainLeader != null  and mainLeader != ''">main_leader = #{mainLeader},</if>
            <if test="otherLeader != null  and otherLeader != ''">other_leader = #{otherLeader},</if>
            <if test="remarks != null  and remarks != ''">remarks = #{remarks},</if>
            <if test="delFlag != null  and delFlag != ''">del_flag = #{delFlag},</if>
            <if test="projectId != null  and projectId != ''">project_id = #{projectId},</if>
            <if test="projectName != null  and projectName != ''">project_name = #{projectName},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="delete" parameterType="String">
        update project_reception set del_flag = #{DEL_FLAG_DELETE} where id = #{id}
    </delete>

    <delete id="deleteByProject" parameterType="String">
        update project_reception set del_flag = #{DEL_FLAG_DELETE} where project_id = #{projectId}
    </delete>



</mapper>